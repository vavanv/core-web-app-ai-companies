@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p class="lead mb-4">Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h5 class="card-title">Get Started</h5>
                    <p class="card-text">Sign in to access your account and explore the application features.</p>
                    <a asp-page="/Login" class="btn btn-primary btn-lg">Sign In Now</a>
                </div>
            </div>
        </div>
    </div>
</div>
