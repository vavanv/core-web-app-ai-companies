@page
@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Dashboard</h1>
        </div>
    </div>

    @if (Model.CurrentUser != null)
    {
        <div class="row">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Welcome, @Model.CurrentUser.FullName!</h5>
                        <p class="card-text">Email: @Model.CurrentUser.Email</p>
                        <p class="card-text">Member since: @Model.CurrentUser.CreatedAt.ToString("MMMM dd, yyyy")</p>
                        @if (Model.CurrentUser.LastLoginAt.HasValue)
                        {
                            <p class="card-text">Last login: @Model.CurrentUser.LastLoginAt.Value.ToString("MMMM dd, yyyy HH:mm")</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Not Authenticated</h5>
                        <p class="card-text">Please log in to access the dashboard.</p>
                        <a asp-page="/Login" class="btn btn-primary">Sign In</a>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.AllUsers != null && Model.AllUsers.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0">All Users</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Created</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.AllUsers)
                                    {
                                        <tr>
                                            <td>@user.FullName</td>
                                            <td>@user.Email</td>
                                            <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (user.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>