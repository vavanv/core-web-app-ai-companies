@using CoreWebApp.Services
@inject IAuthHelperService AuthHelperService

@{
    var isAuthenticated = await AuthHelperService.IsUserAuthenticatedAsync();
    var currentUser = await AuthHelperService.GetCurrentUserAsync();
}

<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
    </li>
    
    @if (isAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Companies">Companies</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-danger me-2" asp-area="" asp-page="/Logout">
                <i class="bi bi-box-arrow-right"></i> Sign Out
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-outline-primary me-2" asp-area="" asp-page="/Login">
                <i class="bi bi-box-arrow-in-right"></i> Sign In
            </a>
        </li>
    }
</ul> 