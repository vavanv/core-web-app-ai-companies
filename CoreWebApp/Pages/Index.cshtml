@page
@model IndexModel
@using CoreWebApp.Services
@inject IContextHelperService ContextHelper
@{
    ViewData["Title"] = "Home page";
    var isAuthenticated = ContextHelper.IsAuthenticated;
    var currentUser = ContextHelper.CurrentUser;
}

<div class="text-center">
    @if (isAuthenticated && currentUser != null)
    {
        <h1 class="display-4">Welcome back, @currentUser.FirstName!</h1>
        <p class="lead mb-4">You're successfully logged in as <strong>@currentUser.Email</strong></p>
        
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="card-title">Quick Actions</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <a asp-page="/Companies/Companies" class="btn btn-primary btn-lg w-100">
                                    <i class="bi bi-building"></i> View Companies
                                </a>
                            </div>
                            <div class="col-md-6 mb-3">
                                <a asp-page="/Dashboard/Dashboard" class="btn btn-outline-primary btn-lg w-100">
                                    <i class="bi bi-speedometer2"></i> Dashboard
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <h1 class="display-4">Welcome</h1>
        <p class="lead mb-4">Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="card-title">Get Started</h5>
                        <p class="card-text">Sign in to access your account and explore the application features.</p>
                        <a asp-page="/Login/Login" class="btn btn-primary btn-lg">Sign In Now</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
