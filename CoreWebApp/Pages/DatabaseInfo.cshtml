@page
@model DatabaseInfoModel
@{
    ViewData["Title"] = "Database Information";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Database Information</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Database Status</h5>
                </div>
                <div class="card-body">
                    <p><strong>Database File:</strong> @Model.DatabasePath</p>
                    <p><strong>Database Exists:</strong> @Model.DatabaseExists</p>
                    <p><strong>Total Users:</strong> @Model.TotalUsers</p>
                    <p><strong>Active Users:</strong> @Model.ActiveUsers</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <button type="submit" name="action" value="seed" class="btn btn-primary mb-2">Re-seed Database</button>
                        <button type="submit" name="action" value="clear" class="btn btn-danger mb-2">Clear All Users</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Users != null && Model.Users.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0">All Users in Database</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Email</th>
                                        <th>Name</th>
                                        <th>Created</th>
                                        <th>Active</th>
                                        <th>Last Login</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.Users)
                                    {
                                        <tr>
                                            <td>@user.Id</td>
                                            <td>@user.Email</td>
                                            <td>@user.FullName</td>
                                            <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (user.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.LastLoginAt.HasValue)
                                                {
                                                    @user.LastLoginAt.Value.ToString("MMM dd, yyyy HH:mm")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Never</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-warning">
                    <h5>No Users Found</h5>
                    <p>The database appears to be empty. Try clicking "Re-seed Database" to add demo users.</p>
                </div>
            </div>
        </div>
    }
</div>